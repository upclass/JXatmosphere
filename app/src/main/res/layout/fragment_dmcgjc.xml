<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.univr.pushi.jxatmosphere.fragments.DMCGJCFragment">


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recycler2"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"></android.support.v7.widget.RecyclerView>-->
    <net.univr.pushi.jxatmosphere.widget.CustomViewPager
        android:id="@+id/viepager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></net.univr.pushi.jxatmosphere.widget.CustomViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tine_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/light_white"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/scroll_linear"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_1"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="气象水文站点雨量"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline1"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_2"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="累计降水量"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline2"
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="气温"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline3"
                        android:layout_width="34dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_4"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="风向风速"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline4"
                        android:layout_width="66dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="相对湿度"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline5"
                        android:layout_width="64dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_6"
                        style="@style/two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15"
                        android:layout_marginRight="@dimen/spacing_15"
                        android:text="气压"
                        android:textColor="@color/black" />

                    <View
                        android:id="@+id/tabline6"
                        android:layout_width="34dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/toolbar_color"
                        android:visibility="invisible"></View>
                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tine_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="35dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tine_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<RelativeLayout-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white">-->

        <!--<ImageView-->
        <!--android:id="@+id/pic_ready"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/app_start" />-->
        <!--</RelativeLayout>-->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_2"
            android:background="@color/white"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>
