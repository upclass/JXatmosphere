        <!--</LinearLayout>-->

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/header_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"></android.support.v7.widget.RecyclerView>


    <net.univr.pushi.jxatmosphere.widget.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></net.univr.pushi.jxatmosphere.widget.CustomViewPager>

</LinearLayout>