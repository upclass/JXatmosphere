<?xml version="1.0" encoding="utf-8"?>

<!--item布局，自定义View-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40.5dp"
    android:orientation="vertical">

    <net.univr.pushi.jxatmosphere.widget.LeftSlideView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/leftSlideView"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/tv_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/layout_content"
                android:background="@drawable/red_background"
                android:scaleType="center"
                android:src="@drawable/mine_delete" />


            <RelativeLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="西湖区.南昌市"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>


        </RelativeLayout>

    </net.univr.pushi.jxatmosphere.widget.LeftSlideView>

    <View
        android:id="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver"></View>
</LinearLayout>