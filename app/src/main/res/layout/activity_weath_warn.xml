<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/header_color"
        android:paddingLeft="@dimen/spacing_12"
        android:paddingRight="@dimen/spacing_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                style="@style/feture_pic"
                android:src="@drawable/app_left" />
        </LinearLayout>

        <TextView
            style="@style/one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fc_warn_pg_name5"
            android:textColor="@color/white" />

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:gravity="center"-->
            <!--android:orientation="horizontal">-->

            <!--<ImageView-->
                <!--android:id="@+id/share_to"-->
                <!--style="@style/feture_pic"-->
                <!--android:src="@drawable/nav_share" />-->

        <!--</LinearLayout>-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/header_color"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title1"
                style="@style/one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/weath_warn_dz"
                android:textColor="@color/white" />

            <View
                android:id="@+id/tabline1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/title1"
                android:layout_alignRight="@+id/title1"
                android:layout_below="@+id/title1"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title2"
                style="@style/one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/weath_warn_sh"
                android:textColor="@color/white" />

            <View
                android:id="@+id/tabline2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@+id/title2"
                android:layout_alignRight="@+id/title2"
                android:layout_below="@+id/title2"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:visibility="invisible"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title3"
                style="@style/one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/weath_warn_hl"
                android:textColor="@color/white" />

            <View
                android:id="@+id/tabline3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@+id/title3"
                android:layout_alignRight="@+id/title3"
                android:layout_below="@+id/title3"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:visibility="invisible"></View>
        </RelativeLayout>


    </LinearLayout>


    <net.univr.pushi.jxatmosphere.widget.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></net.univr.pushi.jxatmosphere.widget.CustomViewPager>
</LinearLayout>