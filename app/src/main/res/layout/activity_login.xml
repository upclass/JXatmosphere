<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigator_bg"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_logo"
            app:layout_marginBottomPercent="20%" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/linear_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            app:layout_marginTopPercent="20%">

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/white"
                android:textSize="17sp"></TextView>

            <ImageView
                android:id="@+id/phone_image"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/login_down"></ImageView>

            <View
                android:id="@+id/phone_view"
                android:layout_width="2dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:background="@color/white"></View>

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/white"
                android:textSize="17sp"></EditText>
        </LinearLayout>


        <EditText
            android:id="@+id/phone_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linear_phone"
            android:layout_below="@+id/linear_phone"
            android:background="@null"
            android:hint="请输入验短信证码"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            app:layout_marginTopPercent="15%"></EditText>

        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linear_phone"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_marginRightPercent="8%"
            app:layout_marginTopPercent="15%">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/phone_code"
            android:layout_alignRight="@+id/send_code"
            android:layout_below="@+id/phone_code"
            android:layout_marginTop="10dp"
            android:background="@color/white">

        </View>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/phone_code"
            android:layout_alignRight="@+id/send_code"
            android:layout_below="@+id/send_code"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:text="登录" />


    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>


</LinearLayout>

