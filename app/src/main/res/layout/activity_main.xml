<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--主布局-->
    <include layout="@layout/maincotent" />

    <!--侧滑菜单-->
    <android.support.design.widget.NavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/navigator_bg"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/head_slip_layout"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/slip_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>





