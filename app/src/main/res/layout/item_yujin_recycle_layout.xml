<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

<ImageView
    android:id="@+id/image"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/app_start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zhandian"
                android:layout_marginTop="8dp"
                style="@style/two_title"
                android:textColor="@color/tine_black"
                android:layout_width="wrap_content"
                android:text="吉安市气象局"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                style="@style/two_title"
                android:textColor="@color/tine_black"
                android:layout_width="wrap_content"
                android:text="于"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/yujin_time"
                android:layout_marginTop="8dp"
                style="@style/two_title"
                android:textColor="@color/tine_black"
                android:layout_width="wrap_content"
                android:text="2018-05-31T10:48:44"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                style="@style/two_title"
                android:textColor="@color/tine_black"
                android:layout_width="wrap_content"
                android:text="发布"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/yujin_subclass"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                style="@style/two_title"
                android:textColor="@color/tine_black"
                android:layout_width="wrap_content"
                android:text="雷电黄色预警信号"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
