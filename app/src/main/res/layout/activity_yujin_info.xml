<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/header_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/spacing_12"
        android:paddingRight="@dimen/spacing_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                style="@style/feture_pic"
                android:src="@drawable/app_left" />
        </LinearLayout>

        <TextView
            style="@style/one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预警详情"
            android:textColor="@color/white" />

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->

        <!--<ImageView-->
        <!--android:id="@+id/share_to"-->
        <!--style="@style/feture_pic"-->
        <!--android:src="@drawable/nav_share" />-->

        <!--</LinearLayout>-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="预报员:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/yujin_yby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="发布单位:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/yujin_fbdw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="预警发布时间:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/yujin_fbsj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="预警类别:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/yujin_lb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="预警信号地区:" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/yujin_dq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/black" />
    </LinearLayout>


    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="预警信号内容:" />


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp" />

</LinearLayout>