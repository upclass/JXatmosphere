<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weekDay"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="right|center_vertical"
            android:text="今天"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical|right"
            android:text="01-28"
            android:textColor="@color/black_yj"
            android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/weathDesc_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/weath_104" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weathDesc"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="left|center_vertical"
            android:text="多云11度"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rain_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/lattice_r_normal" />

            <TextView
                android:id="@+id/rain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0mm" />

            <ImageView
                android:id="@+id/xdsd_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:src="@drawable/lattice_h_normal" />

            <TextView
                android:id="@+id/xdsd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="76.2%" />

            <ImageView
                android:id="@+id/wind_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:src="@drawable/lattice_w_normal" />

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="微风" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>