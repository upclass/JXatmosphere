<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:popupMenuStyle">@style/MenuTextStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
    </style>

    <style name="home_png_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="main_image_style">
        <item name="android:layout_width">@dimen/spacing_20</item>
        <item name="android:layout_height">@dimen/spacing_20</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spacing_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_8</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/tine_black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="main_pic_style">
        <item name="android:layout_width">@dimen/spacing_25</item>
        <item name="android:layout_height">@dimen/spacing_25</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="context_size">
        <item name="android:textSize">@dimen/spacing_12</item>
    </style>

    <style name="one_title">
        <item name="android:textSize">@dimen/spacing_17</item>
    </style>

    <style name="two_title">
        <item name="android:textSize">@dimen/spacing_15</item>
    </style>

    <style name="three_title">
        <item name="android:textSize">@dimen/spacing_13</item>
    </style>

    <style name="feture_pic">
        <item name="android:layout_width">@dimen/spacing_25</item>
        <item name="android:layout_height">@dimen/spacing_25</item>
    </style>

    <style name="header_color">
        <item name="android:background">@color/toolbar_color</item>
    </style>


</resources>
